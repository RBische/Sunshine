<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/appbar_elevation"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:elevation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"/>
    </LinearLayout>
    <fragment
        android:id="@+id/fragment_forecast"
        android:name="fr.bischof.raphael.sunshine.ForecastFragment"
        android:layout_width="@dimen/landscape_forecast_view_width"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
        tools:context="fr.bischof.raphael.sunshine.ForecastFragment"
        tools:layout="@android:layout/list_content"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
